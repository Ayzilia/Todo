<Window x:Name="window" x:Class="Desktop.Main_Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Desktop"
        mc:Ignorable="d"
        Title="Main_Window" Height="470
        " Width="800">
    <Grid Margin="0,0,10,-36">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button Content="Регистрация" HorizontalAlignment="Left" Height="37" Margin="349,384,0,0" VerticalAlignment="Top" Width="374" Grid.Column="1" Click="Button_Click" FontSize="18" Background="#FFFD7575" BorderBrush="#FF707070" Foreground="White">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="0,0,10,10"/>
                </Style>
            </Button.Resources>
        </Button>
        <Button Content="Войти" HorizontalAlignment="Left" Height="36" Margin="349,333,0,0" VerticalAlignment="Top" Width="374" Grid.Column="1" Background="#FFFD7575" FontSize="18" Foreground="White" RenderTransformOrigin="0.5,0.5">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="10,10,0,0"/>
                </Style>
            </Button.Resources>
        </Button>
        <TextBlock x:Name="___Без_имени_" Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="52" Margin="349,22,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="332" FontSize="36"><Run Language="ru-ru" Text="Добро пожаловать!"/></TextBlock>
        <TextBlock Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="349,112,0,0" TextWrapping="Wrap" Text="Почта" VerticalAlignment="Top" Height="31" Width="75" FontSize="20"/>
        <Label Content="pangecheo1210@gmail.com" Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="345,145,0,0" VerticalAlignment="Top" Width="219" FontSize="16" Height="34" RenderTransformOrigin="0.475,1.887">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.404"/>
                    <TranslateTransform X="0.331" Y="0.038"/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>
        <TextBlock Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="349,213,0,0" TextWrapping="Wrap" Text="Пароль" VerticalAlignment="Top" FontSize="20" RenderTransformOrigin="-0.056,0.632"/>
        <TextBlock Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="349,254,0,0" TextWrapping="Wrap" Text="Введите пароль" VerticalAlignment="Top" FontSize="16" Opacity="0.3"/>
        <TextBlock Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="521,287,0,0" TextWrapping="Wrap" Text="Восстановить пароль" VerticalAlignment="Top" FontSize="20" Width="202"/>
        <Border BorderBrush="Black" BorderThickness="1" Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="1" Margin="349,280,0,0" VerticalAlignment="Top" Width="374" Opacity="0.3"/>
        <Border BorderBrush="Black" BorderThickness="1" Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="1" Margin="349,188,0,0" VerticalAlignment="Top" Width="374" Opacity="0.3"/>
        <Image Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="100" Margin="74,78,0,0" VerticalAlignment="Top" Width="100"/>
        <Image Grid.ColumnSpan="2" Margin="49,22,612,315" Source="{Binding ElementName=window, Mode=OneWay}" Stretch="Fill"/>

    </Grid>
</Window>
