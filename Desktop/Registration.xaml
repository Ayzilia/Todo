<Window x:Name="window" x:Class="Desktop.Registration"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Desktop"
        mc:Ignorable="d"
        Title="Registration" Height="600" Width="800">
    <Grid>
        <Button Content="Назад" HorizontalAlignment="Left" Height="37" Margin="400,465,0,0" VerticalAlignment="Top" Width="374" Click="Button_Click" FontSize="18" Background="#FFFD7575" BorderBrush="#FF707070"  Foreground="White">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="0,0,10,10"/>
                </Style>
            </Button.Resources>
        </Button>
        <Button Content="Зарегистрироваться" HorizontalAlignment="Left" Height="36" Margin="400,414,0,0" VerticalAlignment="Top" Width="374" Background="#FFFD7575" FontSize="18" Foreground="White" RenderTransformOrigin="0.5,0.5" Click="Button_Click">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="10,10,0,0"/>
                </Style>
            </Button.Resources>
        </Button>
        <TextBlock HorizontalAlignment="Left" Margin="400,159,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="31" Width="116" FontSize="20"><Run Language="ru-ru" Text="Ваша почта"/></TextBlock>
        <Label Content="exam@yandex.ru" HorizontalAlignment="Left" Margin="396,192,0,0" VerticalAlignment="Top" Width="219" FontSize="16" Height="34" RenderTransformOrigin="0.475,1.887" Opacity="0.3">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.404"/>
                    <TranslateTransform X="0.331" Y="0.038"/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>
        <TextBlock HorizontalAlignment="Left" Margin="400,251,0,0" TextWrapping="Wrap" Text="Пароль" VerticalAlignment="Top" FontSize="20" RenderTransformOrigin="-0.056,0.632"/>
        <TextBlock HorizontalAlignment="Left" Margin="400,292,0,0" TextWrapping="Wrap" Text="Введите пароль" VerticalAlignment="Top" FontSize="16" Opacity="0.3"/>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="1" Margin="400,318,0,0" VerticalAlignment="Top" Width="374" Opacity="0.3"/>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="1" Margin="400,235,0,0" VerticalAlignment="Top" Width="374" Opacity="0.3"/>
        <Image Margin="0,35,575,371" Source="{Binding ElementName=window, Mode=OneWay}" Stretch="Fill" HorizontalAlignment="Right" Width="170"/>
        <TextBlock HorizontalAlignment="Left" Margin="400,77,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="31" Width="187" FontSize="20"><Run Language="ru-ru" Text="Имя пользователя"/></TextBlock>
        <Label Content="Введите имя пользователя" HorizontalAlignment="Left" Margin="396,110,0,0" VerticalAlignment="Top" Width="219" FontSize="16" Height="34" RenderTransformOrigin="0.475,1.887" Opacity="0.3">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.404"/>
                    <TranslateTransform X="0.331" Y="0.038"/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="1" Margin="400,153,0,0" VerticalAlignment="Top" Width="374" Opacity="0.3"/>
        <TextBlock x:Name="___Без_имени_" HorizontalAlignment="Left" Height="38" Margin="400,22,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="258" FontSize="30" Text="Welcome back"/>
        <TextBlock HorizontalAlignment="Left" Margin="400,324,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="20" RenderTransformOrigin="-0.056,0.632"><Run Text="Повторите "/><Run Language="ru-ru" Text="п"/><Run Text="ароль"/></TextBlock>
        <TextBlock HorizontalAlignment="Left" Margin="400,365,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="16" Opacity="0.3"><Run Language="ru-ru" Text="Повторите пароль"/></TextBlock>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="1" Margin="400,391,0,0" VerticalAlignment="Top" Width="374" Opacity="0.3"/>

    </Grid>
</Window>
