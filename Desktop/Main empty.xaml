<Window x:Name="window" x:Class="Desktop.Main_empty"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Desktop"
        mc:Ignorable="d"
        Title="Main_empty" Height="500
        " Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="19*"/>
            <RowDefinition Height="223*"/>
            <RowDefinition Height="242*"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="___Без_имени_" HorizontalAlignment="Left" Height="52" Margin="160,78,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="332" FontSize="36" Grid.Row="1"><Run Language="ru-ru" Text="Добро пожаловать!"/></TextBlock>
        <TextBlock x:Name="___Без_имени__Копировать" HorizontalAlignment="Left" Height="115" Margin="160,156,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="414" FontSize="36" Grid.RowSpan="2" Grid.Row="1"><Run Language="ru-ru" Text="Создайте свою первую задачу!"/></TextBlock>
        <Button Content="Создать первую задачу" HorizontalAlignment="Center" Height="36" Margin="0,88,0,0" VerticalAlignment="Top" Width="212" Background="#FFFD7575" FontSize="18" Foreground="White" RenderTransformOrigin="0.5,0.5" Click="Button_Click" Grid.Row="2">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Button.Resources>
        </Button>
        <Image Margin="8,10,699,150" Source="{Binding ElementName=window, Mode=OneWay}" Stretch="Fill" RenderTransformOrigin="0.241,0.267" Grid.RowSpan="2"/>
        <Menu Margin="-122,0,797,128" Background="#FFD8D8D8" Foreground="#FFD8D8D8" Grid.RowSpan="2">
            <Label Content="Выход" Height="31" Width="82"/>
            <Label Content="Изменить&#xD;&#xA;фото&#xD;&#xA;профиля&#xD;&#xA;" Height="60" Width="106"/>
        </Menu>

    </Grid>
</Window>
